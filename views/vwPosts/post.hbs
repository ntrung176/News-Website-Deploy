{{#section "title"}}Viết bài mới - {{/section}}
{{#section "js"}}
  <script
    src="https://cdn.tiny.cloud/1/skmolnvx35pa80qkbps92m2hd264mqchbtcxpfzqxe08iuuk/tinymce/6/tinymce.min.js"
    referrerpolicy="origin"
  ></script>

  <script>
    tinymce.init({ selector: '#txtContent', height: 450, plugins: 'paste image
    link autolink lists table media', menubar: false, toolbar: [ 'undo redo |
    bold italic underline strikethrough | numlist bullist | alignleft
    aligncenter alignright | forecolor backcolor | table link image media', ],
    });
  </script>
{{/section}}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin/posts">Danh sách bài viết</a></li>
    <li class="breadcrumb-item active" aria-current="page">Viết bài</li>
  </ol>
</nav>

<div class="card">
  <div class="card-body">
    <form method="post" action="/admin/posts/add">
      <div class="form-group">
        <label for="txtPostTitle">Tiêu đề</label>
        <input
          type="text"
          id="txtPostTitle"
          name="PostTitle"
          class="form-control"
          placeholder="Nhập tiêu đề bài viết"
          required
        />
      </div>

      <div class="form-group">
        <label for="txtSumContent">Nội dung tóm tắt</label>
        <input
          type="text"
          id="txtSumContent"
          name="SumContent"
          class="form-control"
          placeholder="Nhập nội dung tóm tắt"
        />
      </div>

      <div class="form-group">
        <textarea
          name="Content"
          id="txtContent"
          class="form-control"
          cols="30"
          rows="10"
          placeholder="Nhập nội dung bài viết"
        ></textarea>
      </div>

      <div class="form-group">
        <label for="txtSource">Nguồn</label>
        <input
          type="text"
          id="txtSource"
          name="source"
          class="form-control"
          placeholder="Nhập nguồn bài viết"
        />
      </div>

      <div class="form-group">
        <label for="txtLinkSource">Link nguồn</label>
        <input
          type="text"
          id="txtLinkSource"
          name="linksource"
          class="form-control"
          placeholder="Nhập link nguồn bài viết"
        />
      </div>

      <div class="form-group">
        <input type="checkbox" id="Premium" name="Premium" value="1" />
        <label for="Premium"><strong><font color="red">Bài viết Premium</font></strong></label>
      </div>

      <div class="form-group">
        <label for="txtTimePost">Ngày đăng</label>
        <input
          type="datetime-local"
          class="form-control"
          id="txtTimePost"
          name="TimePost"
        />
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-success btn-lg btn-block">
          <i class="fa fa-check" aria-hidden="true"></i>
          Đăng bài
        </button>
      </div>
    </form>
  </div>
</div>