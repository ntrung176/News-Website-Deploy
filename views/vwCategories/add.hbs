{{#section "title"}}Thêm chuyên mục - {{/section}}

<div class="row mt-4">
  <div class="col-md-3">
    <div class="card">
      <div class="card-header bg-success text-light">Admin Panel</div>
      <div class="list-group list-group-flush">
        <a
          href="/admin/categories"
          class="list-group-item list-group-item-action"
        >
          <i class="fas fa-arrow-circle-right mr-2"></i>
          Quản lý chuyên mục
        </a>
        <!-- Thêm các liên kết khác tại đây nếu cần -->
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header bg-success text-light">
        <h5 class="mb-0">Thêm chuyên mục lớn</h5>
      </div>
      <div class="card-body">
        <form method="POST" action="">
          <div class="form-group">
            <label for="txtCName">Tên chuyên mục</label>
            <input
              type="text"
              class="form-control"
              id="txtCName"
              name="CName"
              placeholder="Nhập tên chuyên mục"
              required
              autofocus
            />
          </div>
          <div class="d-flex justify-content-between">
            <a
              class="btn btn-secondary"
              href="/admin/categories"
              role="button"
              title="Quay lại danh sách"
            >
              <i class="fa fa-backward mr-2" aria-hidden="true"></i>
              Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
              <i class="fa fa-check mr-2" aria-hidden="true"></i>
              Thêm
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>